<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.realfinalproject.ShowStatsController">
    <children>
        <ImageView fx:id="bg" fitHeight="410.0" fitWidth="609.0" layoutX="-6.0" layoutY="-5.0" pickOnBounds="true" preserveRatio="true" />
        <BarChart fx:id="barChart" layoutX="58.0" layoutY="61.0" prefHeight="313.0" prefWidth="484.0">
            <xAxis>
                <CategoryAxis side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT" />
            </yAxis>
        </BarChart>
        <Label fx:id="label" layoutX="32.0" layoutY="28.0" text="which post do you want to see the stats?" textFill="#ff9019">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <TextField fx:id="postId" layoutX="329.0" layoutY="26.0" />
        <Button fx:id="confirm" layoutX="507.0" layoutY="26.0" mnemonicParsing="false" onAction="#showChart" text="confirm" />
        <Button fx:id="back" layoutX="510.0" layoutY="362.0" mnemonicParsing="false" onAction="#switchToMainPage" text="back" />
    </children>
</AnchorPane>
